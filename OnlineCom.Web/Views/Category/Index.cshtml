@model IEnumerable<OnlineCom.Web.ViewModels.CategoryViewModel>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>
<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Category List</h2>
        </div>
        <div class="col-6">
            <a asp-action="Create">Create New Category</a>
        </div>
    </div>
    <br /><br />

    @if (Model.Count() > 0)
    {
        <table class="table table-bordered table-striped" style="width:100%">
            <thead>
                <tr>
                    <th>
                        Category Name
                    </th>
                    <th>
                        Display Order
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        
                        <td width="50%">
                            @item.CategoryName
                        </td>
                        <td width="30%">
                            @item.DisplayOrder
                        </td>
                        
                    </tr>
                }



            </tbody>
        </table>
    }
    else 
    {
        <p class="alert-danger"> No Category Exists</p>
    }
</div>
